@model LoginandRegisterMVC.ViewModels.ResolutionViewModel

@using (Html.BeginForm())
{


<div class="form-horizontal">
    <h4>ResolveHelp</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <dt>
        @Html.DisplayNameFor(m => m.Help.Issue)
    </dt>

    <dd>
        @Html.DisplayFor(m => m.Help.Issue)
    </dd>
    <dt>
        @Html.DisplayNameFor(m => m.Help.Description)
    </dt>

    <dd>
        @Html.DisplayFor(m => m.Help.Description)
    </dd>



  
   


    <div class="form-group">
        @Html.LabelFor(model => model.ResolveHelp.ResolveAnswer, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ResolveHelp.ResolveAnswer, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ResolveHelp.ResolveAnswer, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.HiddenFor(m => m.ResolveHelp.HelpId)
            <input type="submit" value="Submit Resolution" class="btn btn-default" />
        </div>
    </div>
</div>
}

