@model LoginandRegisterMVC.ViewModels.FeedbackViewModel

@{
    ViewBag.Title = "AddFeedback";
}

<h2>Add Feedback</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Feedback</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @*@Html.LabelFor(model => model.FeedbackQuestion.FeedBackQuestion, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <div class="col-md-10">
           @Html.DisplayFor(model => model.FeedbackQuestion.Question)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Feedback.Answer, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Feedback.Answer, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Feedback.Answer, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.HiddenFor(m => m.Feedback.QuestionId)
            @Html.HiddenFor(m => m.Feedback.UserId)
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
