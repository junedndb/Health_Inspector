@model LoginandRegisterMVC.Models.BMI

@{
    ViewBag.Title = "DietRecommendation";
}

@if (!IsPost)
{

    <h3>Diet Recommendation Based On Body Mass Index</h3>
    <h4>BMI</h4>
    using (Html.BeginForm())
    {
        @*@Html.AntiForgeryToken()*@

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Height, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Height, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Height, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                @Html.LabelFor(model => model.Weight, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Weight, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Weight, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Get Recommendation" class="btn btn-primary" />
                </div>
            </div>
        </div>

        <br />
        <br />
        if (Session["RoleLogin"].Equals("Doctor"))
        {
            @Html.ActionLink("Home", "Index", "Doctor", new { id = Session["Id"] }, new { @class = "btn btn-primary" })
        }
        else
        {
            @Html.ActionLink("Home", "Index", "Users", new { id = Session["Id"] }, new { @class = "btn btn-primary" })
        }
    }
}
else
{


    {
        if (Model.BMIResult != 0)
        {
            <div style="background-color: bisque">
                <h4>
                    <h4>Recommendation Based On Your @ViewBag.bMi BMI</h4>
                    <ul>
                        <li><b>Weight Category : @ViewBag.Weightcategory</b></li>
                        <li><b>Diet Recommendation For You  : </b> @ViewBag.DietRecommendation</li>
                        <li><b>Exercises Recommendation For You  :</b>@ViewBag.ExerciseRecommendation</li>
                    </ul>
                </h4>
            </div>
            <br />
            if (Session["RoleLogin"].Equals("Doctor"))
            {
                @Html.ActionLink("Home", "Index", "Doctor", new { id = Session["Id"] }, new { @class = "btn btn-primary" })
            }
            else
            {
                @Html.ActionLink("Home", "Index", "Users", new { id = Session["Id"] }, new { @class = "btn btn-primary" })
            }


        }
    }

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


